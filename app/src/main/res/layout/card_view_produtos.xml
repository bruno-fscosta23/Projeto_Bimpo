<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idCardView"
    android:layout_width="160dp"
    android:layout_height="210dp"
    android:layout_marginLeft="18dp"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgProduto"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#fff"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProduto"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="Produto"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dProduto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/nProduto"
            android:layout_marginLeft="16dp"
            android:text="Desc"
            android:textColor="#C42E2E"
            android:textSize="11dp" />

        <Button
            android:id="@+id/btnProduto"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/imgProduto"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/nProduto"
            android:background="@drawable/ic_local_grocery_store" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>